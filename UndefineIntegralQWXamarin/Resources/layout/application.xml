<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#000000"
        android:layout_height="match_parent">

    <TextView
            android:layout_width="347dp"
            android:text="UndefinedIntegral"
            android:fontFamily="sans-serif"
            android:layout_height="83dp" android:id="@+id/textView" android:textSize="38sp"
            android:textColor="#FFFFFF" android:layout_alignParentEnd="true" android:layout_marginEnd="33dp"
            android:layout_marginTop="32dp" android:layout_alignParentTop="true"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextTextPersonName" android:textSize="28sp" android:shadowColor="#FFFFFF"
            android:textColor="#FFFFFF" android:outlineSpotShadowColor="#FFFFFF"
            android:outlineAmbientShadowColor="#FFFFFF" android:textColorHighlight="#FFFFFF"
            android:textColorHint="#9F9F9F" android:textColorLink="#FFFFFF" android:hint="Начинайте вводить интеграл"
            android:minHeight="48dp" android:layout_marginBottom="-213dp"
            android:layout_marginLeft="0dp" android:fontFamily="sans-serif-light" android:layout_marginTop="98dp"
            android:layout_below="@+id/textView"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button" android:textColor="#FFFFFF"
            android:outlineAmbientShadowColor="#FFFFFF" android:outlineSpotShadowColor="#FFFFFF"
            android:shadowColor="#FFFFFF" android:textColorHighlight="#FFFFFF" android:textColorHint="#FFFFFF"
            android:text="Решить интеграл"
            android:textColorLink="#FFFFFF" android:textSize="30sp"
            android:layout_marginLeft="0dp"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="225dp" android:layout_below="@+id/editTextTextPersonName"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:textColor="#FFFFFF"
            android:id="@+id/editTextTextPersonName2" android:textSize="28sp" android:minHeight="48dp"
            android:hint="Ответ будет здесь" android:textColorHint="#9F9F9F"
            android:layout_marginLeft="0dp"
            android:fontFamily="sans-serif-light" android:layout_marginTop="5dp" android:layout_below="@+id/button"/>
    <Button
            android:text="Экспорт в Excel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button3"
            android:textColor="#FFFFFF" android:textSize="28sp"
            android:layout_alignParentStart="true" android:layout_marginStart="0dp" android:layout_marginLeft="0dp"
            android:fontFamily="sans-serif-light" android:layout_marginTop="5dp"
            android:layout_below="@+id/button2"/>
    <Button
            android:text="Экспорт в Word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button2"
            android:textColor="#FFFFFF" android:textSize="28sp"
            android:layout_alignParentStart="true" android:layout_marginStart="0dp" android:layout_marginLeft="0dp"
            android:fontFamily="sans-serif-light" android:layout_marginTop="45dp"
            android:layout_below="@+id/editTextTextPersonName2"/>
</RelativeLayout>